<script type="text/javascript">
    function backToTop(e)
    {
        if (e.preventDefault)
        {
            e.preventDefault();
        }
        else
        {
            return false;
        }
        window.scrollTo(0, 0);
    }

    function getDomain()
    {
        var arr = location.href.split('/');
        return arr[0] + '//' + arr[2];
    }
    function bookmark()
    {
        var url = '';
        var name = 'WolfLTC';
        url = getDomain();
        name += ".url";

        location.href = "/API/User/Shortcut/?name=" + name + "&url=" + url;
    }
</script>